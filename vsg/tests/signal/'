
from vsg import rule
from vsg import fix
from vsg import check


class rule_004(rule.rule):
    '''
    Signal rule 004 checks the signal name is lowercase.
    '''
    def __init__(self, name='signal', identifier='004'):
        rule.rule.__init__(self, name, identifier)
        self.phase = 6
        self.solution = 'Change signal name to lowercase.'

    def _analyze(self, oFile, oLine, iLineNumber):
        if oLine.isSignal:
            sLine = oLine.line.split(':')[0]
            lWords = sLine.replace(',', ' ').split()
           
            check.is_lowercase(self, oLine.line.split()[self.iIndex], iLineNumber)

    def _fix_violations(self, oFile):
        for iLineNumber in self.violations:
            fix.lower_case(self, oFile.lines[iLineNumber], oFile.lines[iLineNumber].line.split()[self.iIndex])
